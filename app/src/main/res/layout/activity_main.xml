<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_message"
        style="@style/text_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/welcome_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextInputLayout (wrapper) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/color_code_input_wrapper"
        style="@style/text_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="@string/color_code_input_message"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextInputEditText (input field) -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/color_code_input_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="6"
        app:layout_constraintTop_toBottomOf="@+id/color_code_input_wrapper"
        app:layout_constraintStart_toStartOf="@+id/color_code_input_wrapper"
        app:layout_constraintEnd_toEndOf="@+id/color_code_input_wrapper"
        android:layout_marginTop="8dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        style="@style/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        app:layout_constraintTop_toBottomOf="@+id/color_code_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Optional: Remove unused LinearLayout -->
    <!-- android:id="@+id/linearLayout" was empty and not used -->

</androidx.constraintlayout.widget.ConstraintLayout>